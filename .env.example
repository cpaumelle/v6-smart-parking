# Smart Parking Platform v6 - Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://parking_user:your_password@localhost:5432/parking_v6
DB_HOST=localhost
DB_PORT=5432
DB_NAME=parking_v6
DB_USER=parking_user
DB_PASSWORD=your_password

# Application Configuration
ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=6.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ChirpStack Configuration
CHIRPSTACK_API_URL=localhost:8080
CHIRPSTACK_API_TOKEN=your-chirpstack-api-token
ENABLE_CHIRPSTACK_SYNC=false

# Feature Flags
ENABLE_V6_API=true
ENABLE_ROW_LEVEL_SECURITY=true
ENABLE_DEVICE_POOL=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend Configuration (for React app)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_USE_V6_API=true
REACT_APP_SHOW_PLATFORM_ADMIN=true
REACT_APP_ENABLE_DEVICE_POOL=true
